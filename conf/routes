# Getting users list
GET     /users                      com.superxtra.notepad.controllers.HomeController.getUsers

POST    /register                   com.superxtra.notepad.controllers.HomeController.registerUser
PUT     /password/update            com.superxtra.notepad.controllers.HomeController.updatePassword


POST    /note                       com.superxtra.notepad.controllers.HomeController.createNote
GET     /notes/:userId              com.superxtra.notepad.controllers.HomeController.retrieveUserNotes(userId: Int)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


GET     /                           controllers.Default.redirect(to = "/users")